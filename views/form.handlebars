<section>
  <div class="columns m-4">
    <div class="column">
      <div class="box">
        <form id="login-form">
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input id="user-name" class="input" type="text" placeholder="Text input">
            </div>
          </div>

          <div class="field">
            <label class="label">Email</label>
            <p class="control has-icons-left has-icons-right">
              <input id="user-email" class="input" type="email" placeholder="Email">
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <label class="label">Password</label>
            <p class="control has-icons-left">
              <input id="user-password" class="input" type="password" placeholder="Password">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <label class="label">Age</label>
            <div class="control">
              <input id="user-age" class="input" type="number" placeholder="Number of years old">
            </div>
          </div>
          <div class="field">
            <label class="label">Gender</label>
            <div class="control">
              <div class="select">
                <select id="user-gender">
                  <option selected disabled hidden>Choose here</option>
                  <option>male</option>
                  <option>female</option>
                </select>
              </div>
            </div>
          </div>
          <div class="field">
            <label class="label">Height [cm]</label>
            <div class="control">
              <input id="user-height" class="input" type="number" placeholder="Height in centimeters">
            </div>
          </div>
          <div class="field">
            <label class="label">Weight [kg]</label>
            <div class="control">
              <input id="user-weight" class="input" type="number" placeholder="Weight in kilograms">
            </div>
          </div>
          <div class="field">
            <label class="label">Exercise Level</label>
            <div class="control">
              <div class="select">
                <select id="user-exerciseLevel">
                  <option value="" selected disabled hidden>Choose here</option>
                  <option value="level_1">Sedentary: little or no exercise</option>
                  <option value="level_2">Exercise 1-3 times/week</option>
                  <option value="level_3">Exercise 4-5 times/week</option>
                  <option value="level_4">Daily exercise or intense exercise 3-4 times/week</option>
                  <option value="level_5">Intense exercise 6-7 times/week</option>
                  <option value="level_6">Very intense exercise daily, or physical job</option>
                </select>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="checkbox">
                <input type="checkbox">
                I agree to the <a href="#">terms and conditions</a>
              </label>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link">Submit</button>
            </div>
            <div class="control">
              <button class="button is-link is-light">Cancel</button>
            </div>
          </div>
        </form>
      </div>

    </div>
    <div class="column">
      <section class="section">
        <h1 class="title">Well done taking the first step.</h1>
      </section>
      <div id="salad-img"></div>
    </div>

  </div>
</section>
<script src="./js/form.js"></script>
